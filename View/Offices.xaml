<Window x:Class="personal_task_Milaev.View.Offices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:personal_task_Milaev.View" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Offices" 
        Height="600" 
        Width="1000"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        FontFamily="gilroy-bold"
        MouseDown="Window_MouseDown"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="Beige" Padding="7px" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="120"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image
            Grid.RowSpan="3"
            Grid.ColumnSpan="3"
            Source="/Images/1.jpg"
            Stretch="UniformToFill" />
            <StackPanel Grid.ColumnSpan = "3"  
                    Background="#6b8c8f"/>

            <TextBlock Margin="50,0,0,0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="20"
                   FontWeight="SemiBold">
            <Run Foreground="White">Индивидуальная работа | Страховая компания |</Run>
            <Run
                Cursor="Hand"
                Foreground="LightGoldenrodYellow"
                TextDecorations="Underline"
                ToolTip="Практическая работа по раз. польз. инт.">
                Тот Свет
                
            </Run>
            </TextBlock>

            <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
                <Button   
                x:Name="btnClose"
                Click="btnClose_Click"
                ToolTip="Закрыть приложение"
                Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon Foreground="#FFFEFEFE" Kind="Close" />
                </Button>
            </StackPanel>

            <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
                <Button   
                x:Name="btnBackSpase"
                Click="btnBackSpase_Click"
                ToolTip="Вернуться"
                Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon Foreground="#FFFEFEFE" Kind="Backspace" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
